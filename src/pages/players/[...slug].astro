---
// src/pages/players/[...slug].astro
// We've REMOVED 'export const prerender = false;'. This page is now STATIC.
//TODO: una volta aggiunti tutti i giocatori, implementa il manual fetch dei POV.
// --- 1. ALL YOUR IMPORTS ---
import BaseLayout from '../../layouts/BaseLayout.astro';
import { getCollection, getEntry } from 'astro:content';
import { fetchRecentPov } from '../../lib/fetchPOV';
import IconTwitter from '../../components/icons/IconTwitter.astro';
import IconTwitch from '../../components/icons/IconTwitch.astro';
import IconWebsite from '../../components/icons/IconWebsite.astro';

const allPlayers = await getCollection('players');
// --- 2. GETSTATICPATHS (This runs ONCE at build time) ---
export async function getStaticPaths() {
  const allPlayers = await getCollection('players');
  const allTeams = await getCollection('teams');

  const pages = await Promise.all(
    allPlayers.map(async (playerEntry) => {
      
      let mostRecentPovUrl = null; 
      if (playerEntry.data.featuredPovId) {
        // 1. If a manual ID exists, use it!
        // This is instant and costs 0 API quota.
        mostRecentPovUrl = `https://www.youtube.com/embed/${playerEntry.data.featuredPovId}`;
        console.log(`[POV] Using manual override for ${playerEntry.data.name}`);
      } 
      else {
        // 2. If no manual ID, try to auto-fetch from YouTube
        const youtubeKey = import.meta.env.YOUTUBE_API_KEY;
        const playerName = playerEntry.data.name;
        const POV_CHANNEL_ID = "UCWcMwj6iZCuQ8Klgd42P2Dg"; 
        
        mostRecentPovUrl = await fetchRecentPov(
          playerName, 
          POV_CHANNEL_ID, 
          youtubeKey
        );
      }

      // Find this player's team entry
      const teamEntry = allTeams.find(t => t.slug === playerEntry.data.team);

      return {
        params: { slug: playerEntry.slug }, // e.g., "team-falcons/proper"
        props: { 
          playerEntry, 
          teamEntry,
          mostRecentPovUrl // Pass the fetched URL as a prop
        },
      };
    })
  );

  return pages;
}

// --- 3. GET DATA FROM PROPS ---
const { playerEntry, teamEntry, mostRecentPovUrl } = Astro.props;

// --- 4. GET DATA NEEDED BY THE PAGE ---
const allTeams = await getCollection('teams'); // For the career timeline logo lookup
const { Content } = await playerEntry.render(); // Get the markdown body

// --- 5. PREPARE ALL URLS (Cloudinary) ---
const headshotUrl = playerEntry.data.headshot
  ? playerEntry.data.headshot.replace('/upload/', '/upload/e_background_removal,w_1000,c_fit,f_auto,q_auto:best/')
  : null;

const teamLogoUrl = teamEntry?.data.logo
  ? teamEntry.data.logo.replace('/upload/', '/upload/w_100,h_100,c_pad,f_auto,q_auto/')
  : null;

const cloudinaryBaseUrl = playerEntry.data.headshot
  ? playerEntry.data.headshot.split('/upload/')[0] + '/upload'
  : null;

const bannerUrl = teamEntry?.data.banner
  ? teamEntry.data.banner.replace('/upload/', '/upload/w_1920,h_1080,c_fill,q_auto,f_auto/')
  : 'https://images.contentstack.io/v3/assets/blt321317473c90505c/blt04c04346385d3bdd/65f208333626118536797020/OWCS_Stage1_Korea_Day6_Match2_FAL_vs_T1_6.jpg';

  const teamColor = teamEntry?.data.colour || '#f59e0b'; // Fallback Amber


---
<BaseLayout title={playerEntry.data.name} fullWidth={true}>
  
  {/* ==============================================
  1. HERO WALLPAPER
  ============================================== */}
  <div class="relative w-fullh-[70vh] md:h-[70vh] overflow-hidden rounded-xl">
    <img 
      src={bannerUrl} 
      alt="Background" 
      class="w-full h-full object-cover object-center scale-105 filter blur-md brightness-[0.4]"
    />
    <div class="absolute inset-0 bg-gradient-to-b from-neutral-950/30 via-neutral-950/60 to-neutral-950"></div>
  </div>

  {/* ==============================================
  2. MAIN CONTENT CONTAINER
  ============================================== */}
  <div class="max-w-7xl mx-auto px-4 relative z-10 -mt-64 md:-mt-80 pb-24">
    
    {/* PLAYER PROFILE CARD */}
    <div 
      class="relative bg-neutral-900/80 backdrop-blur-xl border rounded-3xl overflow-hidden shadow-2xl mb-12 grid grid-cols-1 md:grid-cols-12 min-h-[500px]"
      style={`border-color: ${teamColor}40; box-shadow: 0 20px 50px -20px ${teamColor}30;`}
    >
      
      {/* LEFT: Player Image (Takes up more space on desktop) */}
      <div class="md:col-span-5 relative h-[400px] md:h-auto overflow-hidden">
         {/* Flag Background */}
         {playerEntry.data.flagUrl && (
            <img 
              src={playerEntry.data.flagUrl} 
              class="absolute inset-0 w-full h-full object-cover opacity-30 mix-blend-overlay scale-100"
            />
         )}
         {/* Player PNG */}
         {headshotUrl && (
            <img 
              src={headshotUrl} 
              alt={playerEntry.data.name} 
              class="absolute inset-0 w-full h-full object-contain object-bottom transition-transform duration-500"
            />
         )}
         {/* Gradient at bottom to blend */}
         <div class="absolute bottom-0 left-0 right-0 h-1/3 bg-gradient-to-t from-neutral-900/90 to-transparent md:hidden"></div>
      </div>

      {/* RIGHT: Info & Stats */}
      <div class="md:col-span-7 p-8 md:p-12 flex flex-col justify-center relative z-10">
         
         {/* Team Badge */}
         {teamEntry && (
           <a href={`/teams/${teamEntry.slug}/`} class="inline-flex items-center gap-3 mb-4 group w-fit">
             {teamLogoUrl && <img src={teamLogoUrl} class="w-10 h-10 object-contain" />}
             <span class="text-xl text-neutral-400 font-bold group-hover:text-white transition-colors font-title tracking-wide">
               {teamEntry.data.name}
             </span>
           </a>
         )}

         <h1 class="text-6xl md:text-8xl font-title text-white mb-2 tracking-tight leading-none drop-shadow-lg">
           {playerEntry.data.name}
         </h1>
         
         <div class="flex items-center gap-4 mb-8">
            <span class="text-2xl md:text-3xl font-bold" style={`color: ${teamColor};`}>
              {playerEntry.data.role}
            </span>
            {playerEntry.data.fullName && (
              <span class="text-xl text-neutral-500 border-l border-neutral-700 pl-4">
                {playerEntry.data.fullName}
              </span>
            )}
         </div>

         {/* Signature Heroes */}
         {playerEntry.data.signatureHeroes && (
           <div class="flex flex-wrap gap-3">
              {playerEntry.data.signatureHeroes.map(heroName => {
                 const heroSlug = heroName.toLowerCase();
                 const iconUrl = `${cloudinaryBaseUrl}/f_auto,q_auto:best/v1762938948/${heroSlug}.png`;
                 return (
                   <div class="relative group" title={heroName}>
                     <img src={iconUrl} class="w-20 h-20 rounded-lg border-2 bg-neutral-800 transition-colors"  style={`border-color: ${teamColor}40;`}/>
                   </div>
                 );
              })}
           </div>
         )}
      </div>
    </div>


    {/* ==============================================
    3. TWO COLUMN CONTENT
    ============================================== */}
    <div class="grid grid-cols-1 lg:grid-cols-3 gap-8">
      
      {/* LEFT COLUMN (Bio & Timeline) */}
      <div class="lg:col-span-2 space-y-8">
        
        {/* ABOUT CARD */}
        <div class="bg-neutral-900 border border-neutral-800 rounded-2xl p-8 shadow-xl">
           <h2 class="font-title text-3xl text-white mb-4 border-b border-neutral-800 pb-2">About</h2>
           <div class="prose prose-invert prose-lg max-w-none text-neutral-300">
             <Content />
           </div>
        </div>

        {/* CAREER TIMELINE */}
        {playerEntry.data.career && playerEntry.data.career.length > 0 && (() => {
  // 1. Logic: Split the career into "Top 5" and "The Rest"
  const fullCareer = playerEntry.data.career; // Newest first
  const VISIBLE_COUNT = 5;
  
  const visibleItems = fullCareer.slice(0, VISIBLE_COUNT);
  const hiddenItems = fullCareer.slice(VISIBLE_COUNT);
  
  // Helper function to render a single timeline item
  const renderTimelineItem = (entry) => {
    const foundTeam = allTeams.find(t => t.data.name === entry.team);
    const isCurrent = entry.date.includes('Present');
    
    let logoUrl = null;
    if (foundTeam) {
      logoUrl = foundTeam.data.logo.replace('/upload/', '/upload/w_48,h_48,c_pad,f_auto,q_auto:best/');
    } else if (entry.logo) {
      logoUrl = entry.logo.replace('/upload/', '/upload/w_48,h_48,c_pad,f_auto,q_auto:best/');
    }
    const teamUrl = foundTeam ? `/teams/${foundTeam.slug}/` : null;

    return (
      <div class="relative pl-10 py-1">
        <div class={`absolute left-0 top-2.5 w-3 h-3 rounded-full border-2 border-neutral-900 ${isCurrent ? 'bg-green-500 scale-125' : 'bg-amber-500'}`} style="left: 1.35rem;"></div>
        <p class="text-xs font-mono text-neutral-500 mb-1">{entry.date}</p>
        
        <div class="flex items-center gap-3 mb-2">
          {logoUrl && <img src={logoUrl} alt={entry.team} class="w-6 h-6 object-contain opacity-80" />}
          {teamUrl ? (
            <a href={teamUrl} class="text-xl font-bold text-white hover:text-amber-400 transition-colors">{entry.team}</a>
          ) : (
            <h3 class="text-xl font-bold text-white">{entry.team}</h3>
          )}
        </div>

        {entry.notes && (
          <ul class="space-y-1 mb-4">
            {entry.notes.map(note => (
              <li class="text-sm text-neutral-400 flex gap-2">
                <span class="text-amber-500 mt-0.5">▸</span> {note}
              </li>
            ))}
          </ul>
        )}
      </div>
    );
  };

  return (
    <div class="bg-neutral-900 border border-neutral-800 rounded-2xl p-8 shadow-xl">
      <h2 class="font-title text-3xl text-white mb-8 border-b border-neutral-800 pb-2">Career Timeline</h2>
      
      <div class="relative pl-4">
        {/* The Vertical Line */}
        <div class="absolute left-6 top-2 bottom-2 w-0.5 bg-neutral-800"></div>
        
        <div class="space-y-4">
          
          {/* 1. Render the Visible Items */}
          {visibleItems.map(item => renderTimelineItem(item))}

          {/* 2. Render the Hidden Items (if any) */}
          {hiddenItems.length > 0 && (
            <>
              <div id="hidden-timeline" class="hidden space-y-4">
                 {hiddenItems.map(item => renderTimelineItem(item))}
              </div>
              
              {/* 3. The Toggle Button */}
              <button 
                id="toggle-timeline-btn"
                class="w-full mt-4 py-3 bg-neutral-800/50 hover:bg-neutral-800 text-neutral-400 hover:text-white rounded-lg border border-neutral-700 transition-all text-sm font-bold uppercase tracking-wider flex items-center justify-center gap-2 group"
              >
                <span>View Full History ({hiddenItems.length} more)</span>
                <svg xmlns="http://www.w3.org/2000/svg" class="w-4 h-4 group-hover:translate-y-1 transition-transform" fill="none" viewBox="0 0 24 24" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7" /></svg>
              </button>

              {/* 4. The Script to make it work */}
              <script>
                const btn = document.getElementById('toggle-timeline-btn');
                const content = document.getElementById('hidden-timeline');
                
                if (btn && content) {
                  btn.addEventListener('click', () => {
                    const isHidden = content.classList.contains('hidden');
                    if (isHidden) {
                      content.classList.remove('hidden');
                      btn.innerHTML = `
                        <span>Show Less</span>
                        <svg xmlns="http://www.w3.org/2000/svg" class="w-4 h-4 group-hover:-translate-y-1 transition-transform" fill="none" viewBox="0 0 24 24" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 15l7-7 7 7" /></svg>
                      `;
                    } else {
                      content.classList.add('hidden');
                      // Reset button text is hard without passing the count again, 
                      // but "View Full History" works fine as a reset too.
                      btn.innerHTML = `
                        <span>View Full History</span>
                        <svg xmlns="http://www.w3.org/2000/svg" class="w-4 h-4 group-hover:translate-y-1 transition-transform" fill="none" viewBox="0 0 24 24" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7" /></svg>
                      `;
                      // Optional: Scroll back to the button
                      // btn.scrollIntoView({ behavior: 'smooth', block: 'center' });
                    }
                  });
                }
              </script>
            </>
          )}

        </div>
      </div>
    </div>
  );
})()}
      </div>

      {/* RIGHT COLUMN (Media & Socials) */}
      <div class="space-y-8">
        
        {/* POV VIDEO */}
        {mostRecentPovUrl && (
          <div class="bg-neutral-900 border border-neutral-800 rounded-2xl p-6 shadow-xl">
            <h3 class="font-title text-xl text-white mb-4 flex items-center gap-2">
              <span class="text-red-600">▶</span> Recent POV (Courtesy of<a href="https://www.youtube.com/@ObsSojourn">@ObsSojourn</a>!)
            </h3>
            <div class="relative w-full bg-black rounded-lg overflow-hidden shadow-lg" style="padding-bottom: 56.25%;">
              <iframe 
                src={mostRecentPovUrl} 
                title="POV" 
                class="absolute top-0 left-0 w-full h-full" 
                allowfullscreen
              ></iframe>
            </div>
          </div>
        )}

        {/* SOCIALS */}
        {playerEntry.data.socials && (
          <div class="bg-neutral-900 border border-neutral-800 rounded-2xl p-6 shadow-xl">
            <h3 class="font-title text-xl text-white mb-4">Follow</h3>
            <div class="flex flex-col gap-3">
              {playerEntry.data.socials.twitter && (
                <a href={playerEntry.data.socials.twitter} target="_blank" class="flex items-center gap-3 p-3 bg-neutral-800/50 rounded-lg hover:bg-blue-500/10 hover:border-blue-500/50 border border-transparent transition-all group">
                  <IconTwitter class="w-5 h-5 text-neutral-400 group-hover:text-blue-400" />
                  <span class="font-bold text-neutral-300 group-hover:text-white">Twitter</span>
                </a>
              )}
              {playerEntry.data.socials.twitch && (
                <a href={playerEntry.data.socials.twitch} target="_blank" class="flex items-center gap-3 p-3 bg-neutral-800/50 rounded-lg hover:bg-purple-500/10 hover:border-purple-500/50 border border-transparent transition-all group">
                  <IconTwitch class="w-5 h-5 text-neutral-400 group-hover:text-purple-400" />
                  <span class="font-bold text-neutral-300 group-hover:text-white">Twitch</span>
                </a>
              )}
            </div>
          </div>
        )}

      </div>

    </div>

    {(() => {
      // 1. Find other players with the same role
      const similarPlayers = allPlayers.filter(p => 
        p.data.role === playerEntry.data.role && // Same Role
        p.slug !== playerEntry.slug              // Not this player
      );

      // 2. Safety Check (Need at least a few to make it look good)
      if (similarPlayers.length === 0) return null;

      // 3. Pick 4 Random ones
      const showcase = similarPlayers
        .sort(() => 0.5 - Math.random())
        .slice(0, 4);

      return (
        <div class="mt-16 border-t border-neutral-800 pt-12">
          <div class="flex items-center justify-between mb-8">
             <h2 class="font-title text-3xl text-white flex items-center gap-3">
               Other <span style={`color: ${teamColor};`}>{playerEntry.data.role}</span> Players
             </h2>
             <a href="/players" class="text-sm font-bold text-neutral-500 hover:text-white transition-colors uppercase tracking-wider">
               View All →
             </a>
          </div>

          <div class="grid grid-cols-1 sm:grid-cols-2 md:grid-cols-4 gap-6">
            {showcase.map(p => {
               const headshot = p.data.headshot?.replace('/upload/', '/upload/w_400,c_fit,b_transparent,f_auto,q_auto:best/');
               const pTeam = allTeams.find(t => t.slug === p.data.team);
               const pColor = pTeam?.data.colour || '#525252';

               return (
                 <a 
                   href={`/players/${p.slug}/`} 
                   class="group relative h-72 bg-neutral-900 rounded-xl border border-neutral-800 overflow-hidden hover:border-neutral-600 transition-all hover:-translate-y-1 shadow-lg"
                   style={`--hover-color: ${pColor};`}
                 >
                   {/* Dynamic colored border on hover */}
                   <div class="absolute inset-0 border-2 border-transparent group-hover:border-[color:var(--hover-color)] rounded-xl transition-colors pointer-events-none z-20"></div>

                   {/* Image */}
                   {headshot ? (
                     <img 
                       src={headshot} 
                       class="absolute inset-0 w-full h-full object-cover object-top transition-transform duration-500 group-hover:scale-105" 
                     />
                   ) : (
                     <div class="absolute inset-0 bg-neutral-800"></div>
                   )}
                   
                   {/* Gradient & Info */}
                   <div class="absolute inset-0 bg-gradient-to-t from-black via-black/40 to-transparent opacity-90"></div>
                   
                   <div class="absolute bottom-0 left-0 right-0 p-4">
                      <p class="text-xs font-bold uppercase tracking-wider text-neutral-400 mb-1">{pTeam?.data.name}</p>
                      <h4 class="font-title text-3xl text-white leading-none">{p.data.name}</h4>
                   </div>
                 </a>
               )
            })}
          </div>
        </div>
      );
    })()}
  </div>
</BaseLayout>
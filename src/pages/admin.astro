---
import BaseLayout from '../layouts/BaseLayout.astro';
import AdminRoute from '../components/adminComps/AdminRoute';
import DividendPanel from '../components/adminComps/DividendPanel.tsx'
import RaceControl from '../components/adminComps/RaceControl';
---

<BaseLayout title="Nexus Command">
  <div class="min-h-screen bg-black text-white p-4 md:p-8">
    
    <AdminRoute client:only="react">
      {/* BACKGROUND: Cyber Grid & Ambient Glow */}
  <div class="fixed inset-0 z-0 pointer-events-none">
    {/* Dark Gradient Base */}
    <div class="absolute inset-0 bg-neutral-950"></div>
    
    {/* Grid Pattern */}
    <div class="absolute inset-0 bg-[linear-gradient(to_right,#80808012_1px,transparent_1px),linear-gradient(to_bottom,#80808012_1px,transparent_1px)] bg-[size:40px_40px] [mask-image:radial-gradient(ellipse_60%_50%_at_50%_0%,#000_70%,transparent_100%)]"></div>
    
    {/* Top Spotlight */}
    <div class="absolute top-0 left-1/2 -translate-x-1/2 w-full max-w-3xl h-[500px] bg-emerald-500/10 blur-[120px] rounded-full mix-blend-screen" />
  </div>

  <div class="relative z-10 pt-24 pb-20 px-6 max-w-7xl mx-auto">
    
    {/* HEADER SECTION */}
    <div class="flex flex-col items-center justify-center text-center mb-16">
      <div class="inline-flex items-center gap-2 px-3 py-1 rounded-full border border-emerald-500/30 bg-emerald-500/10 text-emerald-400 text-[10px] font-bold uppercase tracking-widest mb-4 animate-pulse">
        <span class="w-2 h-2 rounded-full bg-emerald-500"></span>
        System Online
      </div>
      
      <h1 class="text-5xl md:text-7xl font-black text-white uppercase tracking-tighter drop-shadow-2xl">
        Nexus <span class="text-transparent bg-clip-text bg-gradient-to-r from-emerald-400 to-cyan-400">Command</span>
      </h1>
      <p class="text-neutral-500 mt-4 text-lg font-mono">
        // ADMINISTRATIVE ACCESS GRANTED
      </p>
    </div>

    {/* DASHBOARD GRID */}
    <div class="grid grid-cols-1 md:grid-cols-2 gap-8 items-start">
      
      {/* CARD 1: DIVIDEND DISPATCHER (Financial Panel) */}
      <div class="group relative">
        <div class="absolute -inset-0.5 bg-gradient-to-r from-emerald-500 to-cyan-500 rounded-2xl blur opacity-20 group-hover:opacity-40 transition duration-1000"></div>
        <div class="relative h-full bg-neutral-900/80 backdrop-blur-xl border border-white/10 p-1 rounded-2xl">
          <div class="bg-black/40 rounded-xl p-6 h-full border border-white/5">
            {/* Header */}
            <div class="flex items-center gap-3 mb-6 border-b border-white/5 pb-4">
              <div class="w-10 h-10 bg-emerald-500/20 rounded-lg flex items-center justify-center text-xl">üí∏</div>
              <div>
                <h2 class="text-white font-bold uppercase tracking-wide text-sm">Payout Systems</h2>
                <div class="text-[10px] text-emerald-400 font-mono">Status: Ready</div>
              </div>
            </div>
            
            {/* Component Slot */}
            <DividendPanel client:load />
          </div>
        </div>
      </div>

      {/* CARD 2: RACE CONTROL (Danger Panel) */}
      <div class="group relative">
        <div class="absolute -inset-0.5 bg-gradient-to-r from-red-600 to-rose-600 rounded-2xl blur opacity-20 group-hover:opacity-40 transition duration-1000"></div>
        <div class="relative h-full bg-neutral-900/80 backdrop-blur-xl border border-red-500/20 p-1 rounded-2xl">
          <div class="bg-black/40 rounded-xl p-6 h-full border border-white/5 relative overflow-hidden">
             {/* Hazard Stripes Background */}
             <div class="absolute top-0 right-0 p-4 opacity-5 pointer-events-none">
                <div class="w-32 h-32 border-4 border-red-500 rounded-full flex items-center justify-center border-dashed">
                    <span class="text-4xl">‚ö†Ô∏è</span>
                </div>
             </div>

            {/* Header */}
            <div class="flex items-center gap-3 mb-6 border-b border-red-500/20 pb-4">
              <div class="w-10 h-10 bg-red-500/20 rounded-lg flex items-center justify-center text-xl">üèÅ</div>
              <div>
                <h2 class="text-red-500 font-bold uppercase tracking-wide text-sm">Race Control</h2>
                <div class="text-[10px] text-red-400 font-mono">Auth: Required</div>
              </div>
            </div>

            {/* Component Slot */}
            <RaceControl client:load />
          </div>
        </div>
      </div>

    </div>

    {/* FOOTER LOGS */}
    <div class="mt-12 border-t border-white/5 pt-6 font-mono text-xs text-neutral-600 text-center uppercase">
      Nexus Markets Admin v1.0.4 ‚Ä¢ Secure Connection ‚Ä¢ {new Date().toLocaleDateString()}
    </div>

  </div>
    </AdminRoute>

  </div>
</BaseLayout>
---
import BaseLayout from '../layouts/BaseLayout.astro';
import AdminRoute from '../components/adminComps/AdminRoute';
import DividendPanel from '../components/adminComps/DividendPanel.tsx'
import RaceControl from '../components/adminComps/RaceControl';
import EconomyStats from '../components/adminComps/EconomyStats';
import UserInspector from '../components/adminComps/UserInspector';
import MarketOverride from '../components/adminComps/MarketOverride';
---

<BaseLayout title="Nexus Command">
  <div class="min-h-screen bg-black text-white p-4 md:p-8">
    
    <AdminRoute client:only="react">
      {/* BACKGROUND: Cyber Grid & Ambient Glow */}
  <div class="fixed inset-0 z-0 pointer-events-none">
    {/* Dark Gradient Base */}
    <div class="absolute inset-0 bg-neutral-950"></div>
    
    {/* Grid Pattern */}
    <div class="absolute inset-0 bg-[linear-gradient(to_right,#80808012_1px,transparent_1px),linear-gradient(to_bottom,#80808012_1px,transparent_1px)] bg-[size:40px_40px] [mask-image:radial-gradient(ellipse_60%_50%_at_50%_0%,#000_70%,transparent_100%)]"></div>
    
    {/* Top Spotlight */}
    <div class="absolute top-0 left-1/2 -translate-x-1/2 w-full max-w-3xl h-[500px] bg-emerald-500/10 blur-[120px] rounded-full mix-blend-screen" />
  </div>

  <div class="relative z-10 pt-24 pb-20 px-6 max-w-7xl mx-auto">
    
    {/* HEADER SECTION */}
    <div class="flex flex-col items-center justify-center text-center mb-16">
      <div class="inline-flex items-center gap-2 px-3 py-1 rounded-full border border-emerald-500/30 bg-emerald-500/10 text-emerald-400 text-[10px] font-bold uppercase tracking-widest mb-4 animate-pulse">
        <span class="w-2 h-2 rounded-full bg-emerald-500"></span>
        System Online
      </div>
      
      <h1 class="text-5xl md:text-7xl font-black text-white uppercase tracking-tighter drop-shadow-2xl">
        Nexus <span class="text-transparent bg-clip-text bg-gradient-to-r from-emerald-400 to-cyan-400">Command</span>
      </h1>
      <p class="text-neutral-500 mt-4 text-lg font-mono">
        // ADMINISTRATIVE ACCESS GRANTED
      </p>
    </div>

    <EconomyStats client:visible />

        {/* 2. MAIN GRID */}
        <div class="grid grid-cols-1 lg:grid-cols-3 gap-8">
            
            {/* COL 1: User Management (Panopticon) */}
            <div class="lg:col-span-1">
                <UserInspector client:visible />
            </div>

            {/* COL 2: Market Tools */}
            <div class="lg:col-span-1 space-y-8">
                 <MarketOverride client:visible />
                 
            </div>

            {/* COL 3: Danger Zone */}
            <div class="lg:col-span-1">
                 <RaceControl client:visible />
            </div>

            <div class="lg:col-span-1">
            <DividendPanel client:visible />
            </div>

        </div>

    {/* FOOTER LOGS */}
    <div class="mt-12 border-t border-white/5 pt-6 font-mono text-xs text-neutral-600 text-center uppercase">
      Nexus Markets Admin v1.0.4 • Secure Connection • {new Date().toLocaleDateString()}
    </div>

  </div>
    </AdminRoute>

  </div>
</BaseLayout>
---
import BaseLayout from '../layouts/BaseLayout.astro';
import { getCollection } from 'astro:content';
import PlayerComparison from '../components/PlayerComparison.tsx';

// Get all players and sort them alphabetically
const allPlayers = (await getCollection('players')).sort((a, b) => 
  a.data.name.localeCompare(b.data.name)
);
---

<BaseLayout title="Compare Players" fullWidth={true}>

    <div class="relative w-full h-[60vh] overflow-hidden rounded-xl">
        {/* Replace src with your preferred background */}
        <img
            src="https://live.staticflickr.com/65535/54691711792_ec4236bbf4_k.jpg"
            alt="OWCS Stage Background"
            class="w-full h-220 object-cover object-center scale-100 filter brightness-[0.6]"
        />
        {/* Gradient Overlay */}
        <div
            class="absolute inset-0 bg-gradient-to-b from-neutral-950/30 via-neutral-950/80 to-neutral-950"
        >
        </div>
    </div>

    {/* MAIN CONTENT CONTAINER (Overlapping the banner) */}
    <div class="max-w-6xl mx-auto px-4 relative z-10 -mt-64 md:-mt-80 pb-24">
        <div class="text-center mb-16 drop-shadow-2xl">
            <h1 class="text-6xl md:text-8xl font-title text-white mb-4 tracking-tight">
                Player Comparison
            </h1>
            <p class="text-neutral-300 text-lg md:text-xl max-w-2xl mx-auto font-medium">
                Compare careers, signature heroes, and trophy cabinets to see who's really the better player.
                <br />
            </p>
        </div>
    
    {/* The Comparison Component */}
    <PlayerComparison players={allPlayers} client:load />
    
  </div>

</BaseLayout>
---
// src/layouts/BaseLayout.astro
import '../styles/global.css'; // <-- THIS IS THE CRITICAL LINE
import { ClientRouter } from "astro:transitions";
import SpeedInsights from "@vercel/speed-insights/astro"
export interface Props {
  title: string;
}
const { title } = Astro.props;
---

<!doctype html>
<html lang="en">
  
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <title>{title} | OWCS Nexus</title>
    <meta name="generator" content={Astro.generator} />
    <ClientRouter/>
  </head>
  
  
  <body class="bg-neutral-950 text-gray-200">
    <SpeedInsights />
    {/* Header for the "OWCS Wiki" title */}
    <header class="py-10 mb-12">
      <div class="flex items-center justify-center">
        <a href="/" class="block hover:opacity-80 transition-opacity">
          <img 
            src="/nexus_logo.png" 
            alt="OWCS Nexus" 
            class="h-18 w-auto"
          />
        </a>

      </div>
    </header>

    <main class="container mx-auto">
      <slot />
    </main>
    
    <footer class="mt-24 py-8 border-t border-neutral-800">
      <p class=" text-gray-500 text-sm max-w-2xl mx-auto">
        OWCS Wiki is an unofficial fan project. This site is not affiliated with, 
        endorsed by, or sponsored by Blizzard Entertainment or the Overwatch Champions Series.
        <br/>
        All Overwatch content, trademarks, logos, and images are
        Â© Blizzard Entertainment, Inc. All other trademarks, team logos, player images and player POV's are the property of their
        respective owners.
      </p>
    </footer>

  </body>
</html>
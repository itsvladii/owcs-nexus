---
// src/layouts/BaseLayout.astro
import '../styles/global.css'; // <-- THIS IS THE CRITICAL LINE
import { ClientRouter } from "astro:transitions";
import { SpeedInsights } from '@vercel/speed-insights/next';
export interface Props {
  title: string;
}
const { title } = Astro.props;
---

<!doctype html>
<html lang="en">
  
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <title>{title} | OWCS Wiki</title>
    <meta name="generator" content={Astro.generator} />
    <ClientRouter/>
    <SpeedInsights />
  </head>
  
  <body class="bg-neutral-950 text-gray-200">
    
    {/* Header for the "OWCS Wiki" title */}
    <header class="py-10 mb-12">
      <div class="max-w-7xl mx-auto px-4 text-center">
        <a href="/" class="text-5xl font-bold text-white font-title text-center"> {/* <-- ADDED 'font-title' */}
          OWCS 101
        </a>
      </div>
    </header>

    <main class="container mx-auto">
      <slot />
    </main>
    
    <footer class="mt-24 py-8 border-t border-neutral-800">
      <p class=" text-gray-500 text-sm max-w-2xl mx-auto">
        OWCS Wiki is an unofficial fan project. This site is not affiliated with, 
        endorsed by, or sponsored by Blizzard Entertainment or the Overwatch Champions Series.
        <br/>
        All Overwatch content, trademarks, logos, and images are
        Â© Blizzard Entertainment, Inc. All other trademarks, team logos, and player images are the property of their
        respective owners.
      </p>
    </footer>

  </body>
</html>
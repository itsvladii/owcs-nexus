---
// src/layouts/BaseLayout.astro
import '../styles/global.css'; // <-- THIS IS THE CRITICAL LINE
import { ClientRouter } from "astro:transitions";
import SpeedInsights from "@vercel/speed-insights/astro";
import LoginButton from '../components/homeComps/LoginComponent';
export interface Props {
  title: string;
}
const { title } = Astro.props;
---

<!doctype html>
<html lang="en">
  
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <title>{title} | OWCS Nexus</title>
    <meta name="generator" content={Astro.generator} />
    <ClientRouter/>
    <link 
    rel="stylesheet" 
    href="https://cdn.jsdelivr.net/npm/katex@0.16.9/dist/katex.min.css" 
    integrity="sha384-n8MVd4RsNIU0tAv4ct0nTaAbDJwPJzDEaqSD1odI+WdtXRGWt2kTvGFasHpSy3SV" 
    crossorigin="anonymous"
  />
  </head>
  
  
  <body class="bg-neutral-950 text-gray-200">
    <SpeedInsights />
    {/* Header for the "OWCS Wiki" title */}
    <header class="py-10 mb-12">
      <div class="max-w-7xl mx-auto px-4 flex items-center justify-between"> {/* Changed to justify-between */}
    
    {/* Left: Empty div or Links (to balance the center logo if needed) */}
    <div class="w-32 hidden md:block">
    </div>

    {/* Center: Logo */}
    <a href="/" class="block hover:opacity-80 transition-opacity">
      <img src="/nexus_logo.png" alt="OWCS Nexus" class="h-12 w-auto" />
    </a>

    {/* Right: Search Bar */}
    <div class="flex items-center justify-end w-auto min-w-[140px]">
  <LoginButton client:load />
</div>

  </div>
    </header>

    <main class="container mx-auto">
      <slot />
    </main>
    
    <footer class="mt-24 py-8 border-t border-neutral-800">
      <p class=" text-gray-500 text-sm max-w-2xl mx-auto">
        OWCS Nexus is an unofficial fan project. This site is not affiliated with, 
        endorsed by, or sponsored by Blizzard Entertainment or the Overwatch Champions Series.
        <br/>
        All Overwatch content, trademarks, logos, and images are Â© Blizzard Entertainment, Inc. All other trademarks, team logos, player images and player POV's are the property of their
        respective owners. 
        <br/><br/>
        This website uses data pulled from Liquipedia by the official Liquipedia API, a community-driven wiki for esports competitions. 
        Tournament names, team names, tournament logos, team logos, tournament bracket details and images are sourced from Liquipedia and are used under their own license.
      </p>
    </footer>

  </body>
</html>